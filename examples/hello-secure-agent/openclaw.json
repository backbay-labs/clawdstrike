{
  "$schema": "https://openclaw.dev/schemas/config.json",
  "name": "hello-secure-agent",
  "version": "1.0.0",
  "description": "A minimal secure agent demonstrating clawdstrike integration",

  "agent": {
    "model": "gpt-4",
    "system_prompt": "You are a helpful assistant. Use the available tools to complete tasks.",
    "max_tokens": 4096,
    "temperature": 0.7
  },

  "skills": [
    "./skills/hello"
  ],

  "tools": {
    "builtin": [
      "read_file",
      "write_file",
      "list_directory"
    ]
  },

  "plugins": [
    {
      "name": "@clawdstrike/openclaw",
      "version": "^0.1.0",
      "config": {
        "policy": "./policy.yaml",
        "mode": "deterministic",
        "logLevel": "info",
        "guards": {
          "forbidden_path": true,
          "egress": true,
          "secret_leak": true,
          "patch_integrity": true,
          "mcp_tool": false
        }
      }
    }
  ],

  "environment": {
    "HUSH_LOG_LEVEL": "info"
  }
}
